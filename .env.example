# =============================================================================
# Data Source Configuration
# =============================================================================

# Arrow IPC stream endpoint URL
# The backend should return compressed Arrow IPC data
PUBLIC_ARROW_URL=http://localhost:3000/entries

# =============================================================================
# Currency Configuration
# =============================================================================

# Currencies endpoint URL for minor units lookup
# Returns JSON array: [{ "code": "EUR", "minor_units": 2 }, ...]
# Used to properly format amounts (e.g., JPY has 0 decimals, KWD has 3)
PUBLIC_CURRENCIES_URL=http://localhost:3000/currencies

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache TTL (Time-To-Live) in milliseconds
# Default: 86400000 (24 hours)
# Set to 0 to disable caching
PUBLIC_CACHE_TTL=86400000
