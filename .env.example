# =============================================================================
# Data Source Configuration
# =============================================================================

# Data source type: 'parquet' or 'arrow'
# Default: parquet
PUBLIC_DATA_SOURCE=parquet

# Remote parquet file URL (used when PUBLIC_DATA_SOURCE=parquet)
# For local development, use a CORS-enabled server:
# cd /path/to/parquet/files && python3 -c "from http.server import HTTPServer, SimpleHTTPRequestHandler; H=type('H',(SimpleHTTPRequestHandler,),{'end_headers':lambda s:(s.send_header('Access-Control-Allow-Origin','*'),SimpleHTTPRequestHandler.end_headers(s))}); HTTPServer(('',8888),H).serve_forever()"
PUBLIC_PARQUET_URL=http://localhost:8888/orders.parquet

# Arrow IPC stream endpoint (used when PUBLIC_DATA_SOURCE=arrow)
# Typically a Rust server endpoint
PUBLIC_ARROW_URL=http://localhost:3000/arrow

# =============================================================================
# Currency Configuration
# =============================================================================

# Currencies endpoint URL for minor units lookup
# Returns JSON array: [{ "code": "EUR", "minor_units": 2 }, ...]
# Used to properly format amounts (e.g., JPY has 0 decimals, KWD has 3)
PUBLIC_CURRENCIES_URL=http://localhost:8888/currencies

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache TTL (Time-To-Live) in milliseconds
# Default: 86400000 (24 hours)
# Set to 0 to disable caching
PUBLIC_CACHE_TTL=86400000
